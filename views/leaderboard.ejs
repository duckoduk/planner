<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= classId %> Leaderboard</title>
  <link rel="stylesheet" href="/css/leaderboard.css">
</head>
<body>
  <div class="container">
    <!-- 헤더 -->
    <div class="header">
      <button class="back-btn" onclick="event.preventDefault(); window.location.replace('/explore')">
        <img src="/images/post/back_icon.png" alt="뒤로가기" />
      </button>
      <h2><%= classId %></h2>
    </div>

    <!-- 순위 리스트 -->
    <ul class="rank-list">
      <% if (rank.length === 0) { %>
          <p>아직 참여자 정보가 없습니다.</p>
      <% } %>
      <% if (rank[0]) { %>
      <li class="rank-item">
        <div class="badge first">1st</div>
        <div class="progress-block">
          <div class="rank-info"><%= rank[0].student_id %></div>
          <div class="progress-container">
            <div class="progress-bar" style="width: 90%;"></div>
          </div>
        </div>
      </li>
      <% } %>
      <% if (rank[1]) { %>
      <li class="rank-item">
        <div class="badge second">2nd</div>
        <div class="progress-block">
          <div class="rank-info"><%= rank[1].student_id %></div>
          <div class="progress-container">
            <div class="progress-bar" style="width: 75%;"></div>
          </div>
        </div>
      </li>
      <% } %>
      <% if (rank[2]) { %>
      <li class="rank-item">
        <div class="badge third">3rd</div>
        <div class="progress-block">
          <div class="rank-info"><%= rank[2].student_id %></div>
          <div class="progress-container">
            <div class="progress-bar" style="width: 55%;"></div>
          </div>
        </div>
      </li>
      <% } %>
      <% if (rank[3]) { %>
      <li class="rank-item">
        <div class="badge plain">4</div>
        <div class="progress-block">
          <div class="rank-info">000</div>
          <div class="progress-container">
            <div class="progress-bar" style="width: 40%;"></div>
          </div>
        </div>
      </li>
      <% } %>
      <% if (rank[4]) { %>
      <li class="rank-item">
        <div class="badge plain">5</div>
        <div class="progress-block">
          <div class="rank-info">000</div>
          <div class="progress-container">
            <div class="progress-bar" style="width: 25%;"></div>
          </div>
        </div>
      </li>
      <% } %>
    </ul>
    <!-- 갤러리 보기 버튼(추가요망) -->

    <% if (images.length > 0) { %>
    <!-- 포스트 카드들 -->
      <div class="card-wrap" style="padding-top: 2rem;">
        <% images.forEach((image) => { %>
          <%
          let s = image.total_time
          const h = parseInt(s / 3600)
          s = s % 3600
          const m = parseInt(s / 60)
          s = s % 60
          %>
          <div class="post-card" > 
            <img src="<%= image.image_link %>" class="zoomable-image" alt="post image" />
            <div class="card-content">
              <div class="title"><%= image.student_id %></div>
              <div class="date"><%= h %>h <%= m %>m <%= s %>s</div>
              <div class="streak"><%= image.text %></div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <!-- 하단 네비 -->
  <%- include('partials/bottom_nav') %>
  <% document.getElementById('explore').className += ' active' %>
  <!-- 이미지 확대 -->
  <%- include('partials/image_modal') %>

  <script> document.getElementById('profile').className += ' active' </script>
  <script src="/js/image_modal.js"></script>
</body>
</html>
