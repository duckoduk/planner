<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Page</title>
  <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
  <div class="container">
    <!-- 프로필 -->
    <div class="profile-section">
      <div class="title" style="margin-top: 2rem;">Profile</div>
      <div class="class"><span id="student-class"><%= `${student_id[0]}-${Number(student_id.substring(1, 3))}` %></span></div>
      <div class="id-label">
        <strong style="font-size: 1.1rem;"><span id="username"><%= username %></span></strong>
        <br><span id="student-id"><%= student_id %></span>
      </div>
      <button class="logout-btn" onclick="location.href='/logout'">Log out</button>

    </div>

    <hr class="divider">

    <!-- 이벤트 목록 -->
    <div class="events-title" style="font-weight: 700; color: black;">나의 제출 현황</div>
    <div class="events-list">
      <% images.forEach((image) => { %>
      <%
      let s = image.total_time
      const h = parseInt(s / 3600)
      s = s % 3600
      const m = parseInt(s / 60)
      s = s % 60
      %>
        <div class="event-item">
          <img class="event-thumb zoomable-image" src="<%= image.image_link %>" alt="이벤트 이미지">
          <div class="event-info">
            <div class="event-date"><%= image.created_date %></div>
            <div class="event-time"><%= h %>h <%= m %>m <%= s %>s</div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- 바텀 내비게이션 -->
  <%- include('partials/bottom_nav') %>
  
  <!-- 이미지 확대 -->
  <%- include('partials/image_modal') %>
  <script> document.getElementById('profile').className += ' active' </script>
  <script src="/js/image_modal.js"></script>
</body>
</html>
